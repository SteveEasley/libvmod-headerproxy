varnishtest "Test process called before call"

server s1 {
    rxreq
    txresp -hdr "Content-Type: application/json" -body {
        {
            "vcl_recv": [
                "x-recv: recv"
            ],
            "vcl_deliver": [
                "x-deliv: deliv"
            ]
        }
    }
} -start

server s2 {
    rxreq
    expect resp.http.x-recv == <undef>
    expect req.http.x-error == ""
    txresp
} -start

varnish v1 -vcl+backend {
    import headerproxy from "${vmod_topbuild}/src/.libs/libvmod_headerproxy.so";

    sub vcl_recv {
        headerproxy.backend(s1);
        set req.backend_hint = s2;

        headerproxy.process();
        headerproxy.call();

        set req.http.x-error = headerproxy.error();

        return (hash);
    }

    sub vcl_deliver {
        headerproxy.process();
    }
} -start

client c1 {
    txreq -url "/"
    rxresp
    expect resp.http.x-deliv == "deliv"
} -run

varnish v1 -expect n_object == 1
varnish v1 -expect cache_miss == 1
